{
  "name": "Phero Assignment Checker",
  "description": "Modified extension for Phero assignment checking",
  "version": "0.1.2",
  "action": {
    "default_icon": "icons/icon32.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "permissions": ["notifications", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.programming-hero.com/*"],
      "js": ["./index.js"]
    }
  ],
  "manifest_version": 3
}
